<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.LoginController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>controller.RegisterController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>TopicsController</servlet-name>
        <servlet-class>controller.TopicsController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CommentsController</servlet-name>
        <servlet-class>controller.CommentsController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CommentController</servlet-name>
        <servlet-class>controller.CommentController</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/RegisterController</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>TopicsController</servlet-name>
        <url-pattern>/TopicsController</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>CommentsController</servlet-name>
        <url-pattern>/CommentsController</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CommentController</servlet-name>
        <url-pattern>/CommentController</url-pattern>
    </servlet-mapping>


</web-app>